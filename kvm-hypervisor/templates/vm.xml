<domain type='kvm'>
  <name>'{{ item.key }}'</name>
  <memory unit='KiB'>'{{ item.value.kvm_params.ram }}'</memory>
  <vcpu>'{{ item.values.kvm_params.vcpus }}'</vcpu>

  <os>
    <type arch='x86_64' machine='pc'>hvm</type>
    <boot dev='hd'/>
    <bootmenu enable='yes'/>
  </os>

  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>

  <clock offset='utc'/>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <devices>
    <disk type='block' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback'/>
      <source dev='{{ kvm_host.disk_dir }}/{{ item.key }}.qcow2'/>
      <target dev='vda' bus='virtio'/>
    </disk>

    <disk type='block' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback'/>
      <source dev='{{ kvm_host.disk_dir }}/{{ item.key }}-data.qcow2'/>
      <target dev='vdb' bus='virtio'/>
    </disk>

    <disk type='file' device='cdrom'>
      <drive name='qemu' type='raw'/>
      <source file='{{ kvm_host.disk_dir }}/{{ item.key }}-ci.iso'/>
      <target dev='vdc' bus='virtio'/>
      <readonly/>
    </disk>

    <interface type='network'>
      <source network='{{ kvm_host.network.name }}'/>
      <mac address='{{ item.values.kvm_params.mac }}'/>
      <model type='virtio'/>
    </interface>

    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>

    <input type='mouse' bus='ps2'/>
    <graphics type='vnc' />

    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
  </devices>
</domain>
